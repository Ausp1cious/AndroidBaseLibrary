<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow400"
    tools:context=".ui.time.TomatoTimeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <wang.auspicous.ausp1cious.widgets.TomatoTimeView
        android:id="@+id/ttv_tomato_time"
        android:layout_width="wrap_content"
        android:layout_height="400dp" />
    <Button
        android:id="@+id/btn_tomato_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_tomato_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>