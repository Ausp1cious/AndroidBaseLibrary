<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.time.SystemTimeActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_system_time_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="2019年08月01日"
        android:textSize="24sp"
        android:textColor="@color/white"
        />
        <TextView
            android:id="@+id/tv_system_time_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="星期四"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_system_time_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11:06"
            android:textSize="240sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_system_time_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="01"
            android:textColor="@color/white"
            android:textSize="72sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_system_time_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1%"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:textColor="@color/grey400"
        />
    <ImageView
        android:id="@+id/iv_system_time_light"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />
</RelativeLayout>